{
    "manifest_version": 2,
    "name": "TOC-X",
    "description": "generate table of contents for easiy reading",
    "version": "0.1",

    "icons": {
        "32": "img/icon32.png",
        "64": "img/icon64.png"
    },

    "browser_action": {
        "default_icon": "img/icon64.png",
        "default_title": "gen TOC"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "permissions": [
        "activeTab"
    ],
    "author": "lwxyfer.com"
}
